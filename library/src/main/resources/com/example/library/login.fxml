<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.LoginController">
   <children>
      <Label text="Provide your student ID">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <TextField fx:id="studentIdField" maxHeight="30.0" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="Student ID" />
      <Button onAction="#handleLoginButtonAction" text="Login" />
      <Text fx:id="studentIdErrorText" fill="#da0f0f" text="" visible="false" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
